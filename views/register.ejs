<%- include ./common/header.ejs  %>

    <body style="width:100%;background: url(/tupian/zhuce.jpg) no-repeat center top;background-size: 100%;">
        <div class="container">
            <div class="row">
                <h1 style="text-align: center"> 注册页面</h1>
                <div class="col-sm-4 col-sm-offset-3" style="margin-top:150px;margin-left:400px; ">

                    <form class="form-horizontal" action="http://localhost:4000/register" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">账号</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">密码</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">昵称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="nichen">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">性别</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="sex">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">城市</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="city">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">简介</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="jianjie">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">QQ</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="QQ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">邮箱</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">生日</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="birthday">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" style="color: white">头像</label>
                            <div class="col-sm-10">
                                <input type="file" name="touxiang">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-9 col-sm-10" style="margin-left: 40%;">

                                <button type="submit" class="btn btn-default">注册</button>


                            </div>
                        </div>
                    </form>
                    <button class="btn btn-default" style="margin-left:155px;"> <a href="http://localhost:4000/login">登录</a></button>

                </div>
            </div>
        </div>

        <%- include ./common/footer.ejs  %>